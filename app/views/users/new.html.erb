<!-- Page Content -->
<div id="container_position" class="container">

  <div class="row">
    <div class="col-lg-12 text-center">
      <h1>Sign Up</h1>
      <%= form_for @user do |f| %>
        <div id="form_for_new_user" class="field">
        <div style="float: left;padding-right: 20px;">
          <%= f.label :name %>
        </div>
          <%= f.text_field :name %>
        </div>
        <div id="form_for_new_user" class="field">
        <div style="float: left;padding-right: 20px;">
            <%= f.label :email %>
        </div>
          <%= f.text_field :email %>
        </div>
        <div id="form_for_new_user" class="field">
        <div style="float: left;">
          <%= f.label :password %>
        </div>
          <%= f.password_field :password %>
        </div>
        <div id="form_for_new_user" class="action">
          <%= f.submit %>
        </div>

      <% end %>

    </div>
  </div>
  <!-- /.row -->

</div>
<!-- /.container -->
